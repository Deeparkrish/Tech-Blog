<div class="column">
    <h2 class="title pb-4">Create new account</h2><hr>
    <form class="signup-form">
        <div>
            <label for="username-signup">username:</label>
            <input type="text" id="username-signup" />
        </div>
        <div>
            <label for="email-signup">email:</label>
            <input type="text" id="email-signup" />
        </div>
         <div>
            <label for="password-signup">password:</label>
            <input type="password" id="password-signup"/>
        </div>
        <div>
            <button type="submit" class="button is-primary">signup</button>
            <br>
            <a class="login-link" href="/login">Already have an account?</a>
        </div>
    </form>
</div>

<!-- javascript file-->
<script src="/javascript/sign-up.js"></script>
